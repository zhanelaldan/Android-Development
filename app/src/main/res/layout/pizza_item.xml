<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="155dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="17dp"

        android:layout_height="160dp"
        android:src="@drawable/naruto">

    </ImageView>

    <LinearLayout
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/pizza_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Naruto Pizza"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="sans-serif">
        </TextView>

        <TextView
            android:id="@+id/pizza_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Chicken, teriyaki sauce, pineapple, mozzarella cheese, marinara sauce"
            android:textSize="14dp"
            android:paddingTop="4dp"
            android:fontFamily="sans-serif">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/price_button"
            android:layout_width="wrap_content"
            android:paddingHorizontal="14dp"
            android:layout_height="30dp"
            tools:text="3900 â‚¸"
            android:textColor="#CC4303"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="10dp"

            >

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>
</LinearLayout>